{
  "presets": [
    "env",
    "stage-1"
  ],
  "plugins": [
    "transform-decorators-legacy",
    [ "module-resolver",
      {
        "root": [
          "./src/client",
          "./src/server",
          "./src/common"
        ]
      }
    ]
  ],
  "ignore": [
    "node_modules"
  ],
  "env": {
    "development": {
      "presets": [
        "next/babel"
      ]
    },
    "production": {
      "presets": [
        "next/babel"
      ]
    },
    "test": {
      "presets": [
        "react"
      ]
    }
  }
}
